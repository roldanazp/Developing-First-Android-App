<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="presenter"
            type="com.udacity.shoestore.modules.onboarding.instructions.interfaces.OnboardingInstructionsPresenter" />
    </data>
    <!--     Its a ConstraintLayout the forward button is present,
            its need a little more complex arragment-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.onboarding.instructions.OnboardingInstructionsAddShoeFragment"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_back"
            style="@style/ShoeStoreBackButton"
            android:contentDescription="@string/back_button_description"
            android:onClick="@{(view) -> presenter.onBack()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_onboarding_instructions_2_title"
            style="@style/ShoeStoreTitle"
            android:text="@string/onboarding_instructions_2_title"
            android:layout_marginBottom="32dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lav_review"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/lav_review"
            app:lottie_fileName="review_animation.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_instructions_2_title"
            app:layout_constraintBottom_toTopOf="@id/tv_onboarding_instructions_2_subtitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_onboarding_instructions_2_subtitle"
            style="@style/ShoeStoreSubtitle"
            android:text="@string/onboarding_instructions_2_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lav_review"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_onboarding_instructions_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_onboarding_instructions_forward_title"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawablePadding="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{(view) -> presenter.onContinue()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
